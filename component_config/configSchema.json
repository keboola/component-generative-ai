{
  "type": "object",
  "title": "Data Source Configuration",
  "properties": {
    "authentication": {
      "title": "Authentication",
      "required": [
        "service",
        "#api_token"
      ],
      "properties": {
        "service": {
          "type": "string",
          "title": "AI Service Provider",
          "enum": [
            "openai",
            "azure_openai",
            "llama_2"
          ],
          "default": "open_ai",
          "options": {
            "enum_titles": [
              "OpenAI",
              "Azure OpenAI",
              "Llama 2 (not implemented yet)"
            ]
          },
          "propertyOrder": 1
        },
        "#api_token": {
          "type": "string",
          "format": "password",
          "title": "API Key",
          "propertyOrder": 2
        },
        "api_base": {
          "type": "string",
          "title": "API Base",
          "options": {
            "dependencies": {
              "service": "azure_openai"
            }
          },
          "propertyOrder": 3
        },
        "deployment_id": {
          "type": "string",
          "title": "Deployment ID",
          "options": {
            "dependencies": {
              "service": "azure_openai"
            }
          },
          "propertyOrder": 4
        },
        "api_version": {
          "type": "string",
          "title": "API Version",
          "default": "2023-05-15",
          "options": {
            "dependencies": {
              "service": "azure_openai"
            }
          },
          "propertyOrder": 5
        }
      },
      "propertyOrder": 1
    }
  }
}